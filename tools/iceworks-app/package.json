{
  "name": "iceworks",
  "version": "3.0.0",
  "main": "app/index.js",
  "scripts": {
    "start": "electron app",
    "dist": "gulp dist",
    "pack": "NODE_ENV=development gulp dist"
  },
  "devDependencies": {
    "address": "^1.1.0",
    "electron": "5.0.1",
    "electron-builder": "^21.0.15",
    "gulp": "^3.9.1",
    "ice-npm-utils": "^1.1.0"
  },
  "description": "iceworks desktop app",
  "dependencies": {
    "detect-port": "^1.3.0",
    "electron-is": "^3.0.0",
    "electron-log": "^3.0.6",
    "execa": "^1.0.0",
    "npm": "^6.10.1",
    "npm-run-path": "^3.1.0",
    "path-key": "^3.1.0",
    "shelljs": "^0.8.3"
  },
  "author": {
    "name": "Alibaba Group Holding Limited",
    "url": "http://alibaba.github.io/ice"
  },
  "build": {
    "appId": "com.alibaba-inc.ice",
    "asar": false,
    "publish": [
      {
        "provider": "generic",
        "url": "https://iceworks.oss-cn-hangzhou.aliyuncs.com/${os}"
      }
    ],
    "directories": {
      "app": "build",
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "extraResources": [
      {
        "from": "./bin-${platform}",
        "to": "./bin"
      },
      {
        "from": "./server",
        "to": "./server"
      }
    ],
    "mac": {
      "category": "iceworks.app.category.type",
      "icon": "public/icons/mac/icon.icns"
    },
    "win": {
      "icon": "public/icons/win/icon.ico",
      "artifactName": "${productName}-setup-${version}.${ext}"
    },
    "dmg": {
      "iconSize": 160
    },
    "protocols": {
      "name": "iceworks",
      "schemes": [
        "iceworks"
      ]
    }
  }
}

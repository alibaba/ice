{
  "name": "<%= npmName %>",
  "version": "<%= version %>",
  "description": "<%= description %>",
  "files": [
    "src/",
    "lib/",
    "build/",
    "screenshot.png"
  ],
  "main": "build/index.umd.min.js",
  "style": "build/index.css",
  "license": "MIT",
  "keywords": [
    "ice",
    "vue",
    "component"
  ],
  "scripts": {
    "start": "vue-cli-service serve",
    "build": "vue-cli-service build --target lib --name index src/index.js",
    "lint": "vue-cli-service lint",
    "screenshot": "ice-devtools screenshot",
    "prepublishOnly": "npm run build && npm run screenshot"
  },
  "peerDependencies": {
    "vue": "^2.5.17"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.8.0",
    "@vue/cli-plugin-eslint": "^3.8.0",
    "@vue/cli-service": "^3.8.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-import": "^1.12.0",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.2.2",
    "vue": "^2.6.10",
    "vue-template-compiler": "^2.6.10"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "vue/html-self-closing": "off",
      "vue/no-parsing-error": [
        2,
        {
          "x-invalid-end-tag": false
        }
      ]
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "componentConfig": {
    "name": "<%= name %>",
    "title": "<%= title %>",
    "categories": <%- JSON.stringify(Object.keys(categories)) %>,
    "screenshot": ""
  }
}
